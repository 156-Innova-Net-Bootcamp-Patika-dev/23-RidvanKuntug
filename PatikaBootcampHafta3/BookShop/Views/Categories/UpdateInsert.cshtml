@model BookShopModels.Models.Categories
@{
    //ViewData["Title"] = "Add Category";
    var Title = "Add Category";
}



<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CategoryId" />
        @if (Model.CategoryId != 0)
        {
            ////*** If category exist theb edit
            Title = "Edit Category";
        }
        <div class="col-12 border-bottom">
            <h3 class="text-primary">@Title</h3>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryName" class="form-control"/>
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    @if (Model.CategoryId != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">Update category</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Create category</button>

                    }
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}